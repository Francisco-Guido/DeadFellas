<!-------- CARRITO -------->
    
    <div class="small-container cart-page">
       <a href="/products"> <img src="../images/logo/arrow.png" width="20"></a>

        <table>
            <thead>
                <tr>
                    <th>Artículos</th>
                    <th>Precio</th>
                </tr>
            </thead>




            
            <tbody>
                <%for(let j=0; j < productos.length; j++){%>
                <tr>
                    <td>
                        <div class="cart-info">
                            <img src="../images/productos/<%=productos[j].images%>" width="10%">
                            <div>
                                <p><%=productos[j].name%></p>
                                <a href="/deleteCart/<%=productos[j].id%>">Remover</a>
                            </div>
                          </div> 
    
                    </td>
                    <td>$<%=productos[j].price%></td>
                </tr>  
                <%}%> 
        

                <tr class="total-price-1">
                    <td></td>
                    <td>Costo de envío</td>
                    <td>$500</td>   
                </tr>
                
                <tr class="total-price">
                    <td></td>
                    <td>Total</td>
                    <td>$<%=precio%></td>   
                </tr>

            </tbody>
            
        </table>
        <br>
        <a href="/" class="finish">Finalizar compra</a>


         
    </div>

    </main>
<!-------- FOOTER -------->

<%- include('./partials/scripts') %> 

<!-- js para menu toggle -->
<script>
    var MenuItems = document.getElementById("MenuItems");

    MenuItems.style.maxHeight = "0px";

    function menutoggle() {
        if(MenuItems.style.maxHeight == "0px")
        {
            MenuItems.style.maxHeight = "200px";
        } else {
            MenuItems.style.maxHeight = "0px";
        }
    }
</script>

</body>
</html>